<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/activity_main_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="何かテキストを入力してください"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/activity_main_send_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="送信"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main_edit" />

    <TextView
        android:id="@+id/activity_main_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ここに結果が表示されます"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_main_send_button" />

</androidx.constraintlayout.widget.ConstraintLayout>